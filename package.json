{
  "name": "iextract",
  "version": "1.0.0",
  "description": "Fully offline iMessage export tool.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "rebuild": "electron-rebuild"
  },
  "author": "BuiltByWill <builtbywill@proton.me>",
  "devDependencies": {
    "electron": "37.2.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "3.2.9"
  },
  "build": {
    "appId": "com.builtbywill.iextract",
    "productName": "iExtract",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "index.js",
      "extract.js",
      "assets/**/*",
      "build/**/*",
      "!node_modules/.cache/**"
    ],
    "asar": true,
    "extraFiles": ["extract.js"],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "build/icons/512x512.png"
    },
    "copyright": "Copyright Â© 2025 BuiltByWill"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/builtbywill-sp/iExtract.git"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/builtbywill-sp/iExtract/issues"
  },
  "homepage": "https://github.com/builtbywill-sp/iExtract#readme",
  "dependencies": {
    "better-sqlite3": "12.2.0"
  },
  "engines": {
    "node": "20.x"
  }
}
