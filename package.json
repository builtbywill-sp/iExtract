{
  "name": "iextract",
  "version": "1.0.0",
  "description": "Fully offline iMessage export tool.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "BuiltByWill <builtbywill@proton.me>",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.builtbywill.iextract",
    "productName": "iExtract",
    "files": [
      "**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "build/icons/512x512.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/builtbywill-sp/iExtract.git"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/builtbywill-sp/iExtract/issues"
  },
  "homepage": "https://github.com/builtbywill-sp/iExtract#readme",
  "dependencies": {
    "better-sqlite3": "^12.2.0"
  }
}
